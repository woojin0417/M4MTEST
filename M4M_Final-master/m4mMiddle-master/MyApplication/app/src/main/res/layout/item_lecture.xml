<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:id="@+id/testItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#97aad4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:background="#97aad4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lecture_TextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="과목명"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lectureDate_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:text="요일"
                    android:textColor="?android:attr/colorPressedHighlight"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lectureTime_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="시간"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#97aad4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="1.5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/schedule_lectureType"
                android:textColor="@android:color/holo_orange_dark" />

            <TextView
                android:id="@+id/lectureRoom_TextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="1.5dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="강의실" />

            <TextView
                android:id="@+id/lecturePro_TextView"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="@string/schedule_professor" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>